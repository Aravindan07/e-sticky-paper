{
  "name": "goal-saver",
  "version": "1.0.0",
  "description": "An application to store your goals and tasks for easy use",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client/goal-saver",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client/goal-saver",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuilt": "NPM_CONFIG_PRODUCTION=false npm install --prefix client/goal-saver && npm run build --prefix client/goal-saver"
  },
  "keywords": [
    "goals",
    "saver",
    "mern"
  ],
  "author": "Aravindan <aravindanravi33@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.3.0",
    "config": "^3.3.2",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.8",
    "morgan": "^1.10.0",
    "web-push": "^3.4.4"
  }
}
